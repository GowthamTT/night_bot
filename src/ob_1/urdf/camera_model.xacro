<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="camera">

    <xacro:include filename="inertia_macros.xacro"/>

    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>

    <joint name="base_link_joint" type="continuous">
        <parent link = "base_link"/>
        <child link = "camera_link"/>
        <origin xyz = "-0.50 0 0.55" rpy="0 ${pi/2} 0"/>
    </joint>

    <link name = "base_link">
        <visual>
            <origin xyz = "0 0 0.2"/>
            <geometry>
                <box size = "0.20 0.20 0.6"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin xyz = "0 0 0.2"/>
            <geometry>
                <box size = "0.20 0.20 0.6"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass = "0.5" x = "0.20" y = "0.20" z = "0.6">
            <origin xyz="0 0 0.2"/>
        </xacro:inertial_box>
    </link>

    <link name = "camera_link">
        <visual>
            <geometry>
                 <box size = "0.10 0.10 0.10"/>
            </geometry>
            <origin xyz = "0 0 0.55"/>
            <material name = "red"/>
        </visual>
        <collision>
            <geometry>
                <box size = "0.10 0.10 0.20"/>
            </geometry>
            <origin xyz = "0.10 0.10 0.6"/>
        </collision>
        <xacro:inertial_box mass = "0.3" x = "0.10" y = "0.10" z = "0.6">
            <origin xyz = "0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name = "camera_joint" type = "fixed">
        <parent link = "camera_link"/>
        <child link = "camera_optical_frame"/>
        <origin xyz = "0 0 0.6" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name = "camera_optical_frame">

    </link>

    <gazebo reference="camera_link">
    <material>Gazebo/Red</material>

    <!-- <gazebo reference="camera_frame">
    <material>Gazebo/Red</material> -->

    <!-- <gazebo reference="camera_frame">
    <material>Gazebo/Red</material> -->

        <sensor name="camera" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <camera>
                <horizontal_fov>1.089</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>8.0</far>
                </clip>
            </camera>

            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_optical_frame</frame_name>
                
            </plugin>
        </sensor>
    </gazebo> 

</robot>