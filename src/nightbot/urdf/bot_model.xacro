<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>

    <material name = "green">
        <color rgba = "0 1 0 1"/>
    </material>

    <material name = "blue">
        <color rgba = "0 0 1 1"/>
    </material>

    <material name = "grey">
        <color rgba = "0.6 0.6 0.6 1" />
    </material>

    <link name = "base_link">
        
    </link>

    <joint name = "base_link_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "chassis"/>
        <origin xyz = "-0.1 0 0"/>
    </joint>

    <link name = "chassis">
        <visual>
            <origin xyz = "0.05 0 0.025"/>
            <geometry>
                <box size = "0.2 0.10 0.05"/>
            </geometry>
            <material name = "grey" />
        </visual>
        <collision>
            <origin xyz = "0.05 0 0.025" />
            <geometry>
                <box size = "0.2 0.10 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass = "0.5" x = "0.2" y="0.1" z="0.05" >
            <origin xyz = "0.05 0 0.025" />
        </xacro:inertial_box>
    </link>
    

    <joint name = "column_joint" type = "fixed">
        <parent link = "chassis"/>
        <child link = "column_link"/>
        <origin xyz = "0.02 0 0.05"/>
    </joint>

    <link name = "column_link">
        <visual>
            <origin xyz="0.003 0 0.075"/>
            <geometry>
                <box size = "0.09 0.10 0.15"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <origin xyz = "0 0 0.075"/>
            <geometry>
                <box size = "0.09 0,10 0.15"/> 
            </geometry>
        </collision>
        <xacro:inertial_box mass = "0.4" x = "0.09" y="0.10" z="0.15">
            <origin xyz = "0.003 0 0.075"/>
        </xacro:inertial_box>
    </link>

    <joint name = "wheel_joint" type = "fixed">
        <parent link = "chassis"/>
        <child link = "wheel_link"/>
        <origin xyz = "-0.02 0 0.025" rpy = "-${pi/2} 0 0"/>
        <axis xyz = "0 0 1" />
    </joint>

    <link name = "wheel_link">
        <visual>
            <geometry>
                <cylinder radius = "0.01" length = "0.15"/>    
            </geometry>
            <material name = "red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.01" length = "0.15"/>   
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.3" radius = "0.07" length = "0.04">
            <origin xyz = "0 0 0" rpy = "0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name = "left_wheel_joint" type = "continuous">
        <parent link = "wheel_link"/>
        <child link = "left_wheel"/>
        <origin xyz = "0 0 0.08" rpy = "0 0 0"/>
        <axis xyz = "0 0 1" />
    </joint>

    <link name = "left_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.06" length = "0.04"/>    
            </geometry>
            <material name = "red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.06" length = "0.04"/>   
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.3" radius = "0.06" length = "0.04">
            <origin xyz = "0 0 0" rpy = "0 0 0" />
        </xacro:inertial_cylinder>
    </link>


    <joint name = "right_wheel_joint" type = "continuous">
        <parent link = "wheel_link"/>
        <child link = "right_wheel"/>
        <origin xyz = "0 0 -0.08" rpy = "0 0 0"/>
        <axis xyz = "0 0 1" />
    </joint>

    <link name = "right_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.06" length = "0.04"/>    
            </geometry>
            <material name = "red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.06" length = "0.04"/>   
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.3" radius = "0.06" length = "0.04">
            <origin xyz = "0 0 0" rpy = "0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name = "caster_wheel_joint" type = "fixed">
        <parent link = "chassis"/>
        <child link = "caster_wheel"/>
        <origin xyz = "0.09 0 0"/>
    </joint>

    <link name = "caster_wheel" >
        <visual>
            <geometry>
                <sphere radius = "0.04" />    
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius = "0.04" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass = "0.3" radius = "0.04">
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Red</material>
        <mu1 value="0.001" />
        <mu2 value="0.001" />
    </gazebo>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference = "right_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference = "column_link">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>